{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "nexus",
  "version": "0.1.0",
  "identifier": "com.elias.nexus",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "nexus",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Elias",
    "copyright": "© 2025 Elias. All rights reserved.",
    "category": "Productivity",
    "shortDescription": "Aplicativo Nexus em Tauri + Next.js",
    "longDescription": "Aplicação desktop construída com Tauri e Next.js, unindo performance e interface moderna."
  }
}
